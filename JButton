package edu.oakland.helper;

import java.awt.*;
import javax.swing.*;

public class ButtonBuilder {

    //Start Menu Button variables
    private JButton easyButton;
    private JButton intermediateButton;
    private JButton hardButton;
	
    public ButtonBuilder() {
        //Create Start Menu Buttons
	easyButton = new JButton("Easy");
	intermediateButton = new JButton("Intermediate");
	hardButton = new JButton("Hard");
    }
    
    //Pass Start Menu Buttons
    public JButton getEasyButton() {
	return easyButton;
    }

    public JButton getIntermediateButton() {
        return intermediateButton;
    }
 	
    public JButton getHardButton() {
 	return hardButton;
    }
}
